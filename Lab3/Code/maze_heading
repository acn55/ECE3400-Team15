// assuming starting at bottom right facing north
heading = 0;
if (turn_left) heading++;
if (turn_right) heading--;
if (heading == 4) heading = 0;


void scan() {
    switch (heading) {
        case 0: // north
            if (check_left) // west=true
            if (check_front) // north=true
            if (check_right) // east=true
            break;
        case 1: // west
            if (check_left) // south=true
            if (check_front) // west=true
            if (check_right) // north=true
            break;
        case 2: // south
            if (check_left) // east=true
            if (check_front) // south=true
            if (check_right) // west=true
            break;
        case 3: // east
            if (check_left) // north=true
            if (check_front) // east=true
            if (check_right) // south=true
            break;
    }
}

int x;
int y;
void update_position() {
    switch (heading) {
        case 0: 
            y++;
            break;
        case 1: 
            x++;
            break;
        case 2:
            y--;
            break;
        case 3:
            x--;
            break;
    }
}